<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge">
        <meta name="viewport" content="width = device-width, initial scale = 1">

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/footer.css">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" type="text/css" href="/css/sweetalert.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">

        {#<style>#}
            {#.modal-header, h4, .close {#}
                {#background-color: #5cb85c;#}
                {#color: white !important;#}
                {#text-align: center;#}
                {#font-size: 30px;#}
            {#}#}

            {#.modal-footer {#}
                {#background-color: #f9f9f9;#}
            {#}#}
        {#</style>#}


        <title>
            {% block title %}{% endblock %}
        </title>
    {% endblock %}
</head>

<body>
<!-- Static navbar -->
<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path_for('home') }}">Home</a>

        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                {% if user %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false">{{ user.first_name }} {{ user.last_name }} <span
                                class="caret"></span></a>
                    <ul class="dropdown-menu">

                        {% if user.admin %}
                            <li><a href="{{ path_for('admin') }}">Admin Panel</a></li>
                        {% endif %}
                        <li><a href="" data-toggle="modal" data-target="#changePasswordModal">Change password</a></li>
                        <li><a href="{{ path_for('logout') }}">Log out</a></li>

                    </ul>
            </ul>

            {% else %}
                <li><a href="#" data-toggle="modal" data-target="#loginModal">Login/Register</a></li>
            {% endif %}

            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

<div class="container">
    {% block content %}{% endblock %}
</div>

<div class="footer">
    {% block footer %}
        <div class="container">

            {% if user %}
                <p class="text-muted pull-left">
                    Logged in as {{ user.first_name }} {{ user.last_name }}
                </p>
            {% endif %}

            <p class="text-muted pull-right">
                &#169; {{ "now"|date("Y") }} Jeremy Clarke - Build v0.91
            </p>
        </div>
    {% endblock %}
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="/js/sweetalert.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>


{% include 'login.twig' %}
{% include 'register.twig' %}
{% include 'forgotpassword.twig' %}
{% include 'changepassword.twig' %}



{% block js %}
{% endblock %}


</body>
</html>